{
    "name": "@whereby.com/media",
    "description": "Media library for Whereby",
    "version": "1.14.2",
    "license": "MIT",
    "homepage": "https://github.com/whereby/sdk",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/whereby/sdk.git"
    },
    "bugs": {
        "url": "https://github.com/whereby/sdk/issues"
    },
    "scripts": {
        "clean": "rimraf dist node_modules .turbo",
        "build": "rimraf dist && rollup -c rollup.config.js",
        "test": "npm run test:lint && npm run test:unit",
        "test:unit": "jest",
        "test:lint": "eslint src tests",
        "test:unit:coverage": "jest --collectCoverage",
        "test:attw": "attw --pack . -f table",
        "format:fix": "prettier --write './**/*.{js,ts,yml,json}'",
        "format:check": "prettier --check './**/*.{js,ts,yml,json}'"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.cjs",
    "module": "dist/legacy-esm.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist/**/*.js",
        "dist/**/*.mjs",
        "dist/**/*.cjs",
        "dist/**/*.d.ts",
        "dist/**/*.d.mts",
        "dist/**/*.d.cts"
    ],
    "dependencies": {
        "check-ip": "^1.1.1",
        "events": "^3.3.0",
        "ip-address": "^9.0.5",
        "mediasoup-client": "3.7.12",
        "rtcstats": "github:whereby/rtcstats#5.4.1",
        "sdp": "^3.2.0",
        "sdp-transform": "^2.14.2",
        "socket.io-client": "4.7.2",
        "typescript": "^5.3.3",
        "uuid": "^9.0.1",
        "uuid-validate": "^0.0.3",
        "webrtc-adapter": "^8.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@babel/preset-env": "^7.25.8",
        "jest-websocket-mock": "^2.5.0",
        "process": "^0.11.10"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
